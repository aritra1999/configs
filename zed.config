// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "toolbar": {
    // "breadcrumbs": false,
    // "quick_actions": false
  },
  "show_inline_completions": true,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": false,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 15,
  "buffer_line_height": "comfortable",
  "buffer_font_size": 15,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark Colorblind"
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": true
  },
  "project_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "show": false,
    "button": false
  },
  "languages": {
    "Python": {
      "show_inline_completions": false
    },
    "Plain Text": {
      "show_inline_completions": false
    },
    "Go": {
      "show_inline_completions": false
    },
    "TypeScript": {
      "show_inline_completions": true
    },
    "erb": {
      "tab_size": 2
    }
  },
  "lsp": {
    "typos": {
      "initialization_options": {
        // Path to your typos config file, .typos.toml by default.
        "config": ".typos.toml",
        // Path to your typos-lsp executable, takes $PATH into account.
        "path": "typos-lsp",
        // Diagnostic severity within Zed. "Error" by default, can be:
        // "Error", "Hint", "Information", "Warning"
        "diagnosticSeverity": "Error",
        // Minimum logging level for the LSP, displayed in Zed's logs. "info" by default, can be:
        // "debug", "error", "info", "off", "trace", "warn"
        "logLevel": "info",
        // Traces the communication between ZED and the language server. Recommended for debugging only. "off" by default, can be:
        // "messages", "off", "verbose"
        "trace.server": "off"
      }
    }
  }
}
